
<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/products/edit/<%=data[0].productId%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">categeory</td><td><select name="No">
                        <% for(var i = 0; i < dataCategeory.length; i++) { %>
                            <option value = "<%= dataCategeory[i].No %>" <%= dataCategeory[i].No == data[0].catId ? 'selected' : ''%> >
                                <%= dataCategeory[i].Name %>
                            </option>
                        <%  } %>
                        </select>
                    </td>
            </tr>

                <tr>
                    <td class="label">Name</td><td>: <input type="text" name="Name" required></td>
                 </tr>

                  <tr>
                    <td class="label">Description</td><td>: <input type="text" name="Description" required></td>
                 </tr>
                 <tr>
                    <td class="label">Price</td><td>: <input type="text" name="Price" required></td>
                 </tr>
                 <tr>
                    <td class="label">Quantity</td><td>: <input type="text" name="Quantity" required></td>
                 </tr>
                <tr>
                    <td class="label">Image</td><td>: <input type="file" name="Image"  accept ="/image/*" required></td>
                 </tr>

                  <tr>
                    <td class="label">Status</td>
                        <td>:  <input type="radio" name="Status" value="Active"> Active <input type="radio" name="Status" value="Inactive" checked="checked"> Inactive
                 </tr>
 
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
        
