<%- include layouts/header.ejs %>

    <div class="page-data">
        <form method="post" action="/products/add">
            <table cellpadding="11">
                <tr>
                <td class="label">Categeory</td>
                    <td>
                        <select name="No">
                        <% for(var i = 0; i < data.length; i++) { %>
                            <option value = "<%= data[i].No %>" > <%= data[i].Name %> </option>
                        <%  } %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="label">Name</td><td>:<input type="text" name="Name" placeholder="ex.Madhu" required></td>

                </tr>
                <tr>
                    <td class="label">Description</td><td>:<input type="text" name="Description" placeholder="About product" required></td>
                </tr>
                <tr>
                    <td class="label">Price</td><td>:<input type="text" name="Price" placeholder="ex. 100000" required></td>
                </tr>
                <tr>
                    <td class="label">Quantity</td><td>:<input type="text" name="Quantity" placeholder="ex. 5" required></td>
                </tr>
                <tr>
                    <td class="label">Image</td><td>:<input type="file" name="Image" accept="image/*" required></td>
                </tr>
                <tr>
                    <td class="label">Status</td><td>:<input type="checkbox" name="Status" value="active" ></td>
                </tr>
                <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelProducts()">
                    </td>
                 </tr>
            </table>
        </form>
    </div>

<%- include layouts/footer.ejs %>